<mvc:View controllerName="cust.customer.controller.Main"
    displayBlock="true"
    xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:tnt="sap.tnt" 
    xmlns:ndc="sap.ndc"
	height="100%">
	<Page
		id="main"
		class="roundedPage"
		showHeader="true"
		showFooter="true">
		<headerContent>
			<Bar>
				<contentLeft>
					<Button icon="sap-icon://menu2" press=".onSideNavButtonPress" />
				</contentLeft>
				<contentMiddle>
					<Image height="1.5rem" class="sapUiSmallMarginBegin" src="image/logo.png" />
				</contentMiddle>
				<contentRight>
					<Button icon="sap-icon://search" type="Transparent" id="searchButton" tooltip="Search" class="largeIcon"/>
					<Button icon="sap-icon://person-placeholder" type="Transparent" press="profile" tooltip="Search" class="largeIcon"/>
				</contentRight>
			</Bar>
		</headerContent>
		<content>
			<VBox id="map" class="myMap" height="100%" width="100%"></VBox>
		</content>
		<footer>
			<Bar>
				<contentLeft>
					<Button text="Home" icon="sap-icon://home" press=".onHomePress"/>
				</contentLeft>
				<contentMiddle>
					<SegmentedButton>
                    	<Button id="ren" text="대여중" icon="sap-icon://bar-code" press=".onScanPress"/>
					</SegmentedButton>
				</contentMiddle>
				<contentRight>
					<Button text="즐겨찾기" icon="sap-icon://favorite" press=".onFavoritePress"/>
				</contentRight>
			</Bar>
		</footer>
	</Page>
</mvc:View>
