<mvc:View 
    controllerName="chn.channel.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" 
	xmlns:t="sap.ui.table"
    displayBlock="true"
    height="100%"
    xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
    xmlns="sap.m">
    <Page id="main" title="{i18n>title}">
    <l:VerticalLayout class="sapUiContentPadding">
    <Text  text="{EmpId}"></Text>
    <Text  text="{EmpPw}"></Text>
    <!-- 테이블 -->
        <t:Table
            id="header"
            rows="{/Ch_headerSet}"
            selectionMode="MultiToggle"
            selectionBehavior="Row"
            paste="onPaste"
            ariaLabelledBy="title"
            visibleRowCount="7">
            <t:columns>
                <t:Column width="5rem">
                    <Label text="대리점번호" />
                    <t:template>
                        <Text text="{Chlno}" wrapping="false" />
                    </t:template>
                </t:Column>
                <t:Column width="12rem">
                    <Label text="대리점명" />
                    <t:template>
                        <Text text="{Chlname}" wrapping="false" />
                    </t:template>
                </t:Column>
                <t:Column width="20rem">
                    <Label text="대리점주소" />
                    <t:template>
                        <Text text="{Chladdr}" wrapping="false" />
                    </t:template>
                </t:Column>
                <t:Column width="11rem">
                    <Label text="대리점전화번호" />
                    <t:template>
                        <Text text="{Chlphone}" wrapping="false" />
                    </t:template>
                </t:Column>
            </t:columns>
        </t:Table>
    </l:VerticalLayout>
    </Page>
</mvc:View>
